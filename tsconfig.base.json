{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@kavzorn/ui": ["packages/ui/src"],
      "@kavzorn/tailwind-config": ["packages/tailwind-config/index.ts"]
    }
  }
}
